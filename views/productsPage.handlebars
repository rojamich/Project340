<h1 class="title">Products</h1>
<button class="addButton" id="addProductsButton">Add New Product</button>
<table>
  <thead>
    <tr>
      <th>productsID</th>
      <th>type</th>
      <th>size</th>
      <th>flavor</th>
      <th>price</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{productsID}}</td>
      <td>{{type}}</td>
      <td>{{size}}</td>
      <td>{{flavor}}</td>
      <td>{{price}}</td>
      <td>
        <button class="editButton" data-productsID="{{productsID}}" data-type="{{type}}" data-size="{{size}}" data-flavor="{{flavor}}" data-price="{{price}}">Edit</button>
        <button class="deleteButton" data-productsID="{{productsID}}">Delete</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<div class="popup-overlay" id="popupOverlay">
  <div class="popup">
    <span class="popup-close" id="popupClose">&times;</span>
    <h2 id="popupTitle">Edit Product</h2>
    <form id="productsForm" novalidate>
      <label for="productsID">Product ID:</label>
      <input type="text" id="productsID" name="productsID">
      <label for="type">Type:</label>
      <input type="text" id="type" name="type">
      <label for="size">Size:</label>
      <input type="text" id="size" name="size">
      <label for="flavor">Flavor:</label>
      <input type="text" id="flavor" name="flavor">
      <label for="price">Price:</label>
      <input type="text" id="price" name="price">
      <button type="submit">Save</button>
    </form>
  </div>
</div>

<script src="/js/productsScript.js"></script>